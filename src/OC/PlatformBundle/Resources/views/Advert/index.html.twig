{% extends '@OCPlatform/layout.html.twig' %}

{% block h1title %}
  Job Offers
{% endblock h1title %}

{% block main %}

<!--=====================================
=            Full Width Blog            =
======================================-->
<section id="blog-full-width">
    <div class="container">
        <!-- Pagination -->
        <div class="row">
            <div class="col-md-12">
                <ul class="pagination">
                {% for p in range(1, nbPages) %}
                  <li class="{% if p==page %}active{% endif %}">
                    <a href="{{ path('oc_platform_homepage', {'page':p})}}">{{p}}</a>
                  </li>
                {% endfor %}
                </ul>
            </div>
        </div>
      <!-- Adverts list -->
        <div class="row">
            {% for advert in listAdverts %}
            <div class="col-sm-6 col-md-4">
                <article class="wow fadeInDown" data-wow-delay=".3s" data-wow-duration="500ms">
                    <div class="">
                        <a href="{{ path("oc_platform_view", {"id": advert.id} ) }}">
                          <img class="img-thumbnail"
                              style="width: 350px; height: 250px;"
                              {% if advert.image.example == true %}
                                src="{{advert.image.url}}"
                              {% else %}
                                src="{{ asset(advert.image.webPath) }}"
                              {% endif %}
                              alt="{{ advert.image.alt }}"
                            />
                        </a>
                    </div>
                    <div class="blog-content">
                        <h2 class="blogpost-title">
                        <a href="{{ path("oc_platform_view", {"id": advert.id} ) }}">{{ advert.title }}</a>
                        </h2>
                        <div class="blog-meta">
                            <span>{{ advert.date|date("d/m/Y") }}</span>
                            by <a href="#"><strong>{{ advert.author }}</strong></a>
                            {% if advert.author == app.user %}
                            /
                              <a style="color: blue;" href="{{ path("oc_platform_edit", {"id": advert.id} ) }}">
                                Edit advert
                              </a>
                              /
                             <a style="color: red;" href="{{ path("oc_platform_delete", {"id": advert.id} ) }}">
                               Delete advert
                             </a>
                            {% endif %}
                        </div>
                        <a href="{{ path("oc_platform_view", {"id": advert.id} ) }}" class="btn btn-dafault btn-details" style="margin-top: 0px;">Go to job offer</a>
                    </div>

                </article>
            </div>
            {% endfor %}
        </div>
        <!-- Pagination -->
        <div class="row">
            <div class="col-md-12">
                <ul class="pagination">
                {% for p in range(1, nbPages) %}
                  <li class="{% if p==page %}active{% endif %}">
                    <a href="{{ path('oc_platform_homepage', {'page':p})}}">{{p}}</a>
                  </li>
                {% endfor %}
                </ul>
            </div>
        </div>
    </div>
</section>

{% endblock main %}

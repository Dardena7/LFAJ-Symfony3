<h3>Formulaire d'annonces</h3>

<div class="well">
  {{ form_start(form, {'attr': {'class': 'form-horizontal'} } ) }}

  {{ form_errors(form) }}

  {{ form_row(form.date) }}

  <div class="form-group">
    {{ form_label(form.title, "Titre de l'annonce") }}

    {{ form_errors(form.title) }}

    <div>
      {{ form_widget(form.title, {'attr': {'class': 'form_control'} } ) }}
    </div>
  </div>

  {{ form_row(form.content) }}

  {{ form_row(form.author) }}

  {{ form_row(form.categories) }}

  <a href="#" id="add_category" class="btn btn-default"> Ajouter une cat√©gorie</a>

  {{ form_rest(form) }}

  {{ form_row(form.published) }}

  {{ form_widget(form.saved, {'attr': {'class': 'btn btn-primary'} } ) }}

  {{ form_end(form) }}
</div>
